@using MVC_3.DAL.Models

@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to Delete this department</h1>

<br/>
<br/>

<form asp-action="Delete" asp-route-id="@Model.Id">
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input type="text" asp-for="Code" class="form-control" readonly />
    </div>
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" readonly />
    </div>
    <div>
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input type="text" asp-for="DateOfCreation" class="form-control" readonly />
    </div>
    <input type= "submit" value="Delete" class=" btn btn-danger"/>
    <a asp-action="Index">Back To List</a>
</form>

